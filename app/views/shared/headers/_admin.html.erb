<header>
  <div class="desktop" id="logo">
    <%= image_tag LocaleLogo.by_type_language(1, I18n.locale).first.nil? ? 'logo.png' : LocaleLogo.by_type_language(1, I18n.locale).first.logo.url, width: 60, height: 60 %>
  </div>
  <label class="mobile" id="trigger">
    <i class="icon-menu-2"></i>
  </label>
  <div class="dropdown user-menu">
    <%= image_tag LocaleLogo.by_type_language(1, I18n.locale).first.nil? ? 'logo.png' : LocaleLogo.by_type_language(1, I18n.locale).first.logo.url, 'data-toggle' => 'dropdown', width: 40, height: 40, href: '#', style: 'background-color:#fff;' %>
    <i class="fa fa-caret-up"></i>
    <ul aria-labelledby="dLabel" class="dropdown-menu" role="menu">
      <li>
        <%= link_to destroy_user_session_path, method: :delete do %>
          <i class="icon-switch"></i>
          Logout
        <% end %>
      </li>
    </ul>
  </div>
</header>