= content_for :title, t('illness_guides.illness')
- content_for :page_title, t('dashboard.menu_item.illness_guide')
- step_size = 3
- page_step = 3
.message-dash-container
  .container
    .row
      = render partial: '/shared/progress_bar', locals: {step_size: step_size, page_step: page_step}
    .row.content-main
      .col-md-12      
        %h4.option-title= t('illness_guides.labels.guide_content')
      .col-md-12{data:{step: 5, intro: t("guideline.illness_guide.step5")}}        
        #pdf-wrapper
          %p
            This is illness content
      .col-md-12.form-buttons.text-right.no-h-padding
        .col-md-3.col-md-offset-6.col-sm-3.col-sm-offset-6.col-xs-6
        .col-md-3.col-sm-3.col-xs-6
          %a{href: illness_manager_illness_guides_path(target_role: params[:target_role], illness_id: params[:illness_id]), class: 'btn btn-gray btn-wizard'} 
            =t('form_labels.back')
:javascript
  jQuery(document).ready(function() {
    healthChildcare.guideline.introGoToStep('guide1', "#{t('form_labels.next')}", "#{t('form_labels.back')}", "#{t('form_labels.intro_done')}", "#{t('form_labels.intro_skip')}");
    $('#link_dashboard_guide').on('click', function(){
      healthChildcare.guideline.introGoToStep('guide1', "#{t('form_labels.next')}", "#{t('form_labels.back')}", "#{t('form_labels.intro_done')}", "#{t('form_labels.intro_skip')}");
    });    
  });            