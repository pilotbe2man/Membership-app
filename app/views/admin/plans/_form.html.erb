<%= form_for [:admin, @plan] do |f| %>
	<div class="threecol"></div>
	<div class="ninecol last">
		<%= render partial: 'shared/admin/errors', locals: { object: @plan } %>
	</div>

	<div class="threecol">
  		<h3><%= t('admin.plans._form.heading')%></h3>
  		<p><%= t('admin.plans._form.para')%></p>
	</div>
	<div class="ninecol last">
  		<fieldset class="widget widget-content widget-last">
			<div class="form-group">
				<%= f.label :Description %>
				<%= f.text_field :name, :class => 'form-control' %>
			</div>
            <div class="form-group">
                <%= f.label :type %>
                <%= f.radio_button :plan_type, '0', (!@plan.nil? && @plan.plan_type == 0) ? {:checked => true} : {:checked => false} %> Deposit
                <%= f.radio_button :plan_type, '1', (!@plan.nil? && @plan.plan_type == 1) ? {:checked => true} : {:checked => false}  %> Daily Rate
                <%= f.radio_button :plan_type, '2', (!@plan.nil? && @plan.plan_type == 2) ? {:checked => true} : {:checked => false} %> Free
                <%= f.radio_button :plan_type, '3', (!@plan.nil? && @plan.plan_type == 3) ? {:checked => true} : {:checked => false} %> Phase 1
                <%= f.radio_button :plan_type, '4', (!@plan.nil? && @plan.plan_type == 4) ? {:checked => true} : {:checked => false} %> Phase 2
            </div>
			<div class="form-group">
				<%= f.label :price %>
				<%= f.text_field :price, :class => 'form-control' %>
			</div>
            <div class="form-group">
                <%= f.label :language %>
                <%= f.select :language, options_for_select(pre_countries, :selected => f.object.language), {},{:class => 'form-control'} %>
            </div>
            <div class="form-group">
                <%= f.label :currency %>
                <%= f.currency_select :currency, :selected => f.object.currency %>
            </div>
            <div class="form-group">
                <%= f.label :document %>
                <%= f.file_field :document, :class => 'form-control' %>
            </div>
			<!--
			<div class="form-group form-last">
				<%= f.label :allocation %>
				<%= f.number_field :allocation, :class => 'form-control' %>
			</div>
			-->
		</fieldset>
		<div class="form-action">
    		<%= f.submit 'Submit', :class => 'btn btn-blue btn-large' %>
		</div>
	</div>
<% end %>
<script type="text/javascript">
  jQuery(document).ready(function() {
    $('#plan_currency').addClass('form-control');
  });	
</script>