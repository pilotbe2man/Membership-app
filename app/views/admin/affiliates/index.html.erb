<% content_for :title, 'Affiliates' %>
<% content_for :breadcrumb, 'Affiliates' %>

<div class="twelvecol">
  <div class="page-header">
    <h2 class="widget widget-header">Partner Orgnizations</h2>
  </div>
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th><%= t('admin.daycare.index.label1')%></th>
            <th><%= t('admin.daycare.index.label2')%></th>
            <th><%= t('admin.daycare.index.label3')%></th>
            <th>URL</th>
            <th>Users</th>
            <th></th>
          </tr>
          <form action="/admin/affiliates" method="get">
          <tr>
            <th>
              <input type="text" name="name" class="form-control" value="<%= (params[:name].nil?) ? '' : params[:name]%>">
            </th>
            <th>
              <input type="text" name="address" class="form-control" value="<%= (params[:address].nil?) ? '' : params[:address]%>">
            </th>            
            <th>
            </th>
            <th></th>
            <th></th>
            <th>
              <button class="btn btn-blue btn-large">
                Search
              </button>
            </th>
          </tr>
          </form>
        </thead>
        <tbody>
          <% @affiliates.each do |at| %>
            <tr>
              <td>
                <%= at.name %>
              </td>
              <td>
                <%= at.address %>
              </td>
              <td>
                <%= at.country %>
              </td>
              <td>
                <%= at.url %>
              </td>
              <td>
                <%= at.users.length %>
              </td>
              <td class="align-left">
                <%= link_to edit_admin_affiliate_path(at) do %>
                  <i class="icon-pencil"></i>
                <% end %>
                <%= link_to [:admin, at], method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <i class="icon-remove"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

  <% if @affiliates.empty? %>
    <div class="widget widget-content">
      <div class="helper-notification">
        <p><%= t('admin.daycare.index.line')%></p>
        <i class="icon-home"></i>
      </div>
    </div>
  <% else %>

    </div>
  <% end %>
</div>