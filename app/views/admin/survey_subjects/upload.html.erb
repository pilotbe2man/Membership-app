<% content_for :title, 'Upload Survey Module' %>
<% content_for :breadcrumb, 'Upload' %>
<% breadcrumb_add 'Surveys', admin_survey_subjects_path %>
<% breadcrumb_add @subject.title, admin_survey_subject_path(@subject) %>

<div class="twelvecol">
    <div class="page-header">
        <h2 class="widget widget-header">Upload Survey Module</h2>
    </div>
    <%= form_tag upload_admin_survey_subject_path, method: :post, multipart: true do %>
        <div class="threecol">
            <h3>Upload</h3>
            <p>Select a spreadsheet file to upload. Please make sure the file you are uploading is a <b>.xlsx</b> format.</p>
        </div>

        <div class="ninecol last">
            <fieldset class="widget widget-content widget-last">
                <div class="form-group">
                    <%= label_tag 'Spreadsheet File' %>
                    <%= file_field_tag "spreadsheet_file[]", accept: 'xlsx', :class => 'form-control', multiple: true %>
                </div>
            </fieldset>
            <div class="form-action">
                <%= submit_tag 'Upload', :class => 'btn btn-blue btn-large' %>
            </div>
        </div>
    <% end %>
</div>

