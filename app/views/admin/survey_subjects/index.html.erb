<% content_for :title, 'Surveys' %>
<% content_for :breadcrumb, 'Surveys' %>

<div class="twelvecol">
  <div class="page-header">
    <%= link_to new_admin_survey_subject_path, :class => "btn btn-blue btn-large", "data-placement" => "bottom", "data-toggle" => "tooltip", title: "Add Survey" do %>
      <i class="icon-plus"></i>
    <% end %>
    <h2 class="widget widget-header"><%= t('admin.survey_subjects.index.heading')%></h2>
  </div>
  <% if @subjects.empty? %>
    <div class="widget widget-content">
      <div class="helper-notification">
        <p><%= t('admin.survey_subjects.index.para')%></p>
        <i class="icon-copy"></i>
      </div>
    </div>
  <% else %>
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>Icon</th>
            <th>Title</th>
            <th>Description</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @subjects.each do |subject| %>
            <tr>
                <td>
                    <%= image_tag subject.icon.file %>
                </td>
                <td>
                    <%= subject.title %>
                </td>
              <td>
                <%= subject.description %>
              </td>
              <td>
                <%= link_to new_admin_survey_subject_path(survey_id: subject.id) do %>
                    <i class="icon-plus"></i>
                <% end %>
                <%= link_to admin_survey_subject_path(subject) do %>
                    <i class="icon-search"></i>
                <% end %>
                <%= link_to edit_admin_survey_subject_path(subject) do %>
                  <i class="icon-pencil"></i>
                <% end %>
                <%= link_to [:admin, subject], method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <i class="icon-remove"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>