.message-dash-container
  .container
    .row
      = form_tag upload_admin_message_templates_path, method: :post, multipart: true do
        .threecol
          %h3 Upload
          %p
            Select a spreadsheet file to upload. Please make sure the file you are uploading is a
            %b .xlsx
            format.
        .ninecol.last
          %fieldset.widget.widget-content.widget-last
            .form-group
              %label.step-instruction{for: 'language'}= t('messages.labels.choose_language')
              = select_tag :template_lang, options_for_select(options_for_template_localizations, I18n.default_locale), class: 'form-control'
            .form-group
              = label_tag 'Spreadsheet Message Template File'
              = file_field_tag :spreadsheet_file, accept: 'xlsx', :class => 'form-control'
          .form-action
            = submit_tag 'Upload', :class => 'btn btn-blue btn-large'
