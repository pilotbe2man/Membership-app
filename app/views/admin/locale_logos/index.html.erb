<% content_for :title, 'Logos' %>
<% content_for :breadcrumb, 'Logos' %>

<div class="twelvecol">
  <div class="page-header">
    <%= link_to new_admin_locale_logo_path, :class => "btn btn-blue btn-large", "data-placement" => "bottom", "data-toggle" => "tooltip", title: "Add Logo" do %>
      <i class="icon-plus"></i>
    <% end %>
    <h2 class="widget widget-header">Logos</h2>
  </div>
    <div class="table-responsive" style="overflow: auto;">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>Type</th>
            <th>Description</th>
            <th>Language</th>
            <th></th>
          </tr>
          <form action="/admin/locale_logos" method="get">
          <tr>
            <th></th>
            <th></th>            
            <th>
              <%= select_tag :language, options_for_select(pre_countries, :selected=> (params[:language].nil?) ? '' : params[:language].upcase), {:include_blank => 'Select Language', class: 'form-control'}%>
            </th>
            <th>
              <button class="btn btn-blue btn-large">
                Search
              </button>
            </th>
          </tr>
          </form>
        </thead>
        <tbody>
          <% @locale_logos.each do |locale_logo| %>
            <tr>
                <td>
                    <%= locale_logo.logo_type %>
                </td>
                <td>
                    <%= locale_logo.description %>
                </td>
                <td>
                    <%= locale_logo.language %>
                </td>
              <td>
                <%= link_to admin_locale_logo_path(locale_logo) do %>
                    <i class="icon-search"></i>
                <% end %>
                <%= link_to edit_admin_locale_logo_path(locale_logo) do %>
                  <i class="icon-pencil"></i>
                <% end %>
                <%= link_to [:admin, locale_logo], method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <i class="icon-remove"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
  <% if @locale_logos.empty? %>
    <div class="widget widget-content">
      <div class="helper-notification">
        <p>You don't have any logos yet.</p>
        <i class="icon-copy"></i>
      </div>
    </div>
  <% else %>

    </div>
  <% end %>
</div>