<% content_for :title, 'Subjects' %>
<% content_for :breadcrumb, 'Subjects' %>

<div class="twelvecol">
  <div class="page-header">
    <%= link_to new_admin_subject_path, :class => "btn btn-blue btn-large", "data-placement" => "bottom", "data-toggle" => "tooltip", title: "Add Subject" do %>
      <i class="icon-plus"></i>
    <% end %>
    <h2 class="widget widget-header"><%= t('admin.subjects.index.heading')%></h2>
  </div>
  <% if @subjects.empty? %>
    <div class="widget widget-content">
      <div class="helper-notification">
        <p>You don't have any subjects yet.</p>
        <i class="icon-books"></i>
      </div>
    </div>
  <% else %>
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th><%= t('admin.subjects.index.heading1')%></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @subjects.each do |subject| %>
            <tr>
              <td>
                <%= subject.title %>
              </td>
              <td>
                <%= link_to edit_admin_subject_path(subject) do %>
                  <i class="icon-pencil"></i>
                <% end %>
                <%= link_to [:admin, subject], method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <i class="icon-remove"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
