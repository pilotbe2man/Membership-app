<% content_for :title, 'Email Camapign Template' %>
<% content_for :breadcrumb, 'Email Camapign Template' %>

<div class="twelvecol">
  <div class="page-header">
    <%= link_to new_admin_email_campaign_path, :class => "btn btn-blue btn-large", "data-placement" => "bottom", "data-toggle" => "tooltip", title: "Add Campaign Template" do %>
      <i class="icon-plus"></i>
    <% end %>
    <h2 class="widget widget-header">Email Camapign Template</h2>
  </div>
    <div class="table-responsive" style="overflow: auto;">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>Subject</th>
            <th>Language</th>
            <th></th>
          </tr>
          <form action="/admin/email_campaign" method="get">
          <tr>
            <th></th>
            <th>
              <%= select_tag :language, options_for_select(pre_countries, :selected=> (params[:language].nil?) ? '' : params[:language].upcase), {:include_blank => 'Select Language', class: 'form-control'}%>
            </th>
            <th>
              <button class="btn btn-blue btn-large">
                Search
              </button>
            </th>
          </tr>
          </form>
        </thead>
        <tbody>
          <% @email_campaigns.each do |campaign| %>
            <tr>
                <td>
                    <%= campaign.subject %>
                </td>
                <td>
                    <%= campaign.language %>
                </td>
              <td>
                <%= link_to admin_email_campaign_path(campaign) do %>
                    <i class="icon-search"></i>
                <% end %>
                <%= link_to edit_admin_email_campaign_path(campaign) do %>
                  <i class="icon-pencil"></i>
                <% end %>
                <%= link_to [:admin, campaign], method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <i class="icon-remove"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
  <% if @email_campaigns.empty? %>
    <div class="widget widget-content">
      <div class="helper-notification">
        <p>You don't have any email campaign templates yet.</p>
        <i class="icon-copy"></i>
      </div>
    </div>
  <% else %>

    </div>
  <% end %>
</div>