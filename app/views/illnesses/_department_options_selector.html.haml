.choose-department
  .row
    %h5= t('illnesses.labels.child_details') 
  .row
    .col-md-6
      %h3= t('illnesses.labels.choose_department')
      #search-department-name{'data-department_names': user_departments.to_json}
        = text_field_tag 'search-department-name', '', placeholder: t('illnesses.labels.search'), class: 'form-control typeahead'
    .col-md-6
      .radio-box-group
        - user_departments.each do |dept|
          .radio-box
            %input{:type=>"radio", :name => "department[id]", :id => "chk_depart_#{dept[:id]}", :style => "display: none;", value: dept[:id], 'data-department_name': dept[:name]}
            %label{:for => "chk_depart_#{dept[:id]}"}
              = dept[:name]
