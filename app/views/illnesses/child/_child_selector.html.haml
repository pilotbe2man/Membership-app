.row
  .col-md-6
    %h3= t('illnesses.labels.choose_child')
    #search-child-name{'data-children_names': @children.inject([]){|list, child| list << {id: child.id, name: child.name}; list }.to_json}
      = text_field_tag 'search-child-name', '', placeholder: t('illnesses.labels.search'), class: 'form-control typeahead'
  .col-md-6
    .radio-box-group
      - @children.each do |child|
        .radio-box
          %input{:type=>"radio", :name => "child[id]", :id => "chk_child_#{child.id}", :style => "display: none;", value: child.id, 'data-child_name': child.name, :required => "true"}
          %label{:for => "chk_child_#{child.id}"}
            = child.name
